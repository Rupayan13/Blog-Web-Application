<%- include("./partials/adminHeader.ejs") %>
<section class="content">
    <h2>Recent Blog Posts</h2>
    <% if(locals.blogList) { %>
    <div class="posts">
        <% blogList.forEach((blogs)=>{ %>
        <div class="post-card">
            <h3><%= blogs.title %></h3>
            <p><%= blogs.content.substring(0, 100) %>...</p>
            <button class="read-more-button"><a style="text-decoration: none; color: white" href="/adminBlog/<%= blogs._id %>">Read More...</a></button>
        </div>
        <% }); %>
    </div>
    <% } %>
</section>
<%- include("./partials/adminFooter.ejs") %>   